{
    "name": "zenigata/testing",
    "type": "library",
    "license": "MIT",
    "prefer-stable": true,
    "version": "1.0.0",
    "authors": [
        {
            "name": "Ilario Promutico"
        }
    ],
    "autoload": {
        "psr-4": {
            "Zenigata\\Testing\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Zenigata\\Testing\\Test\\": "tests/"
        }
    },
    "require": {
        "php": "^8.2 || ^8.3 || ^8.4",
        "psr/cache": "^3.0",
        "psr/clock": "^1.0",
        "psr/container": "^2.0",
        "psr/http-factory": "^1.1",
        "psr/http-server-middleware": "^1.0",
        "psr/log": "^3.0",
        "psr/simple-cache": "^3.0"
    },
    "require-dev": {
        "mikey179/vfsstream": "^1.6",
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": "^11.5 || ^12.0"
    },
    "scripts": {
        "phpstan": "vendor/bin/phpstan analyse src tests --memory-limit=512M",
        "phpunit": "phpunit --configuration phpunit.xml --testdox",
        "test": [
            "@phpstan",
            "@phpunit"
        ]
    }
}
